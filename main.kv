# Colores estándar de la aplicación (bt: botones, bg: background)
#:set mainbtcolor (0, 0, .19, 1)
#:set mainbgcolor (0, .35, .5, 1)
#:set mainbttextcolor (1, 1, 1, 1)


<Manager>:
    MenuPrincipal:
        name: 'MenuPrincipal'
        canvas.before:
            Color:
                rgba: mainbgcolor
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            padding: '10dp'

            WrappedLabel:
                pos_hint: {'center_x': .5}
                font_size: '100sp'
                halign: 'center'
                valign: 'middle'
                markup: True
                text: '[b]Kivynomics[/b]'
                color: (1, 1, 1, 1)

            MDIconButton:
                size_hint: (.3, .3)
                pos_hint: {'center_x': .5}
                icon: 'play-circle-outline'
                icon_size: '150sp'
                on_release: root.transition.direction= 'left'; root.current = 'JugarScreen'

            BoxLayout:
                size_hint: (.3, .3)
                pos_hint: {'right': 1}
                MDIconButton:
                    pos_hint: {'right': 1}
                    icon: 'information-outline'
                    on_release: root.transition.direction= 'left'; root.current = 'MasInfo'

                MDIconButton:
                    pos_hint: {'right': 1}
                    icon: 'account'
                    on_release: root.transition.direction= 'left'; root.current = 'About'

    JugarVentana:
        id: jugarid

    MasInfo:

    About:



<JugarVentana>:
    name: 'JugarScreen'

    # BoxLayout con ttodo el contenido de la pantalla
    BoxLayout:
        padding: '5dp'
        spacing: '5dp'
        canvas.before:
            Color:
                rgba: mainbgcolor
            Rectangle:
                pos: self.pos
                size: self.size

        # Parte izquierda de la pantalla
        BoxLayout:
            orientation: 'vertical'
            padding: '10dp'
            spacing: '10dp'

            # Datos cuantitativos
            BoxLayout:
                orientation: 'vertical'
                size_hint: (.65, .25)
                padding: ('20dp', 0, 0, 0)

                canvas.before:
                    Color:
                        rgba: mainbtcolor
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos

                # Función de demanda del mercado
                WrappedLabel:
                    text: 'Demanda del mercado: p(x) = ' + root.demanda_mercado
                    halign: 'left'

                # Costes totales de la empresa del jugador
                WrappedLabel:
                    text: 'Costes totales: ' + root.costes_totales
                    halign: 'left'

            # Narrativa del juego
            BoxLayout:
                orientation: 'vertical'

                WrappedLabel:
                    canvas.before:
                        Color:
                            rgba: mainbtcolor
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    size_hint: (.25, .25)
                    text: 'Etapa: ' + str(root.stage)

                WrappedLabel:
                    text: root.narrativa
                    canvas.before:
                        Color:
                            rgba: mainbtcolor
                        Line:
                            width: 2
                            rectangle: (self.x, self.y, self.width, self.height)

                WrappedLabel:
                    text: root.modelo
                    canvas.before:
                        Color:
                            rgba: mainbtcolor
                        Line:
                            width: 2
                            rectangle: (self.x, self.y, self.width, self.height)

            # Tu decisión
            BoxLayout:
                padding: '10dp'
                size_hint: (.8, .25)
                canvas.before:
                    Color:
                        rgba: mainbtcolor
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos

                WrappedLabel:
                    text: 'Tu decisión: '

                GameInput:
                    id: respuesta
                    size_hint: (.6, 1)
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    on_text_validate: root.confirma()
                    font_size: '16sp'

                WrappedLabel:
                    text: '   uds/€'
                    halign: 'left'

                Boton2:
                    text: 'Confirmar'
                    on_release: root.confirma()

        # Parte derecha de la pantalla
        BoxLayout:
            padding: '5dp'
            size_hint: (.43, .8)
            pos_hint: {'top': 1}
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: mainbtcolor
                RoundedRectangle:
                    size: self.size
                    pos: self.pos

            # NPC
            BoxLayout:
                padding: '5dp'
                orientation: 'vertical'

                size_hint: (.8, .7)
                pos_hint: {'center_x': .5}

                Image:
                    source: root.imagen

            # Comentario del NPC
            WrappedLabel:
                size_hint_y: None
                height: self.texture_size[1]
                font_size: '13sp'
                text: root.comentario

            # Historial
            BoxLayout:
                orientation: 'vertical'

                WrappedLabel:
                    text: 'HISTORIAL'

                WrappedLabel:
                    text: root.stage1

                WrappedLabel:
                    text: root.stage2

                WrappedLabel:
                    text: root.stage3


<SelectPlayer>:
    size_hint: (.65, .8)
    auto_dismiss: False

    BoxLayout:
        padding: ('5dp', '5dp', '15dp', 0)
        orientation: "vertical"

        canvas.before:
            Color:
                rgba: mainbtcolor
            RoundedRectangle:
                size: self.size
                pos: self.pos

        # Título
        BoxLayout:
            size_hint: (1, .1)
            WrappedLabel:
                text: '[u]Selecciona tu rival[/u]'
                font_size: '16sp'
                markup: True

        BoxLayout:

            # Botones de selección de NPC
            BoxLayout:
                size_hint: (.75, .95)
                orientation: "vertical"
                spacing: '50dp'
                padding: ('5dp', '5dp', '25dp', '20dp')

                Boton2:
                    text: "John Forbes Nash"
                    on_release: root.selection1()

                Boton2:
                    text: "Murray Rothbard"
                    on_release: root.selection2()

                Boton2:
                    text: "Karl Marx"
                    on_release: root.selection3()

            # Información sobre NPC
            BoxLayout:
                orientation: "vertical"

                WrappedLabel:
                    text: 'Creador de conceptos como "equilibrio de Nash" o "negociación de Nash". Jugador experimentado y con gran conocimiento que optimizará sus decisiones al máximo'
                    font_size: '13sp'
                    halign: 'justify'
                WrappedLabel:
                    text: 'Considerado padre del anarcocapitalismo. Economista libertario que ignora las actuaciones del Gobierno pues las considera ilegítimas.'
                    font_size: '13sp'
                    halign: 'justify'
                WrappedLabel:
                    text: 'Uno de los filósofos más influyentes de la historia. Sobreestima sus costes un 20% pues no quiere extraer plusvalía de sus trabajadores'
                    font_size: '13sp'
                    halign: 'justify'


<ResetGame>:
    size_hint: (.3, .65)
    auto_dismiss: False

    BoxLayout:
        padding: '10dp'
        spacing: '10dp'
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: mainbtcolor
            RoundedRectangle:
                size: self.size
                pos: self.pos

        # Título
        BoxLayout:
            size_hint: (1, .1)
            WrappedLabel:
                text: '[u]El juego ha finalizado[/u]'
                font_size: '16sp'
                markup: True

        # Selección de acción al terminar la partida
        BoxLayout:
            orientation: "vertical"
            spacing: '15dp'
            padding: '5dp'

            Boton2:
                text: 'Volver a jugar'
                on_release:
                    app.root.ids.jugarid.reset_parametros()
                    app.root.ids.jugarid.on_enter()
                    root.dismiss()

            Boton2:
                text: 'Menú principal'
                on_release:
                    app.root.ids.jugarid.reset_parametros()
                    app.root.transition.direction = 'right'
                    app.root.current = 'MenuPrincipal'
                    root.dismiss()

            Boton2:
                text: 'Exportar resultados'
                on_release:
                    root.exportar_resultados(app.root.ids.jugarid.historial)
                    app.root.ids.jugarid.reset_parametros()
                    app.root.transition.direction = 'right'
                    app.root.current = 'MenuPrincipal'
                    root.dismiss()


<VentanaLayout>:
    canvas.before:
        Color:
            rgba: mainbgcolor
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        spacing: '10dp'
        size_hint: (.4, .15)
        pos_hint: {'right': 1}
        padding: '10dp'

        Boton:
            text: 'Reiniciar'
            on_release:
                root.confirmar()

        Boton:
            text: 'Menú Principal'
            on_release: app.root.transition.direction= 'right'; app.root.current = 'MenuPrincipal'


# Clase básica para las ventanas de más información
<Scroll@ScrollView>:
    pos_hint: {'top': 1}

    canvas.before:
        Color:
            rgba: mainbtcolor
        Rectangle:
            pos: self.pos
            size: self.size


<MasInfo>:
    name: 'MasInfo'

    Scroll:
        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            padding: ('10dp', '10dp', '10dp', '40dp')

            WrappedLabel:
                padding: ('10dp', '10dp')
                size_hint_x: 1.6
                size_hint_y: None
                halign: 'center'
                bold: True
                text: 'JUGAR vs NPC'
                font_size: '30sp'

            WrappedLabel:
                padding: ('10dp', '10dp')
                size_hint_y: None
                height: self.texture_size[1]
                halign: 'justify'
                text: root.a
                bold: True

            Boton:
                text: 'Menú Principal'
                md_bg_color: mainbgcolor
                on_release: app.root.transition.direction= 'right'; app.root.current = 'MenuPrincipal'


<About>:
    name: 'About'

    GridLayout:
        canvas.before:
            Color:
                rgba: mainbtcolor
            Rectangle:
                size: self.size
                pos: self.pos
        cols: 1
        padding: '10dp'
        spacing: '10dp'

        WrappedLabel:
            size_hint: (1, 2.5)
            bold: True
            halign: 'justify'
            text: root.a
        BoxLayout:
            spacing: '10dp'
            Boton2:
                text: 'Trabajo de Fin de Grado (texto completo)'
                on_release:
                    import webbrowser
                    webbrowser.open('https://drive.google.com/drive/folders/1QooAmQHTVd8keyGHeqa_X5vMOSCjETG1?usp=sharing')
            Boton2:
                text: 'Github source code'
                on_release:
                    import webbrowser
                    webbrowser.open('https://github.com/ENRSANJ/Kivynomics.git')
        Boton2:
            text: 'Menú Principal'
            on_release: app.root.transition.direction= 'right'; app.root.current = 'MenuPrincipal'


<GameInput>:
    multiline: False
    write_tab: False
    padding: [0, (self.height-self.line_height)/2]
    halign: 'center'


# Botón personalizado que usaremos en la aplicación
<Boton@MDFillRoundFlatButton>:
    font_size: '16sp'
    md_bg_color: mainbtcolor
    pos_hint: {'center_x': .5}
    size_hint: (1, 1)

<Boton2@MDFillRoundFlatButton>:
    font_size: '16sp'
    md_bg_color: mainbgcolor
    pos_hint: {'center_x': .5}
    size_hint: (1, 1)


# Botones con icono personalizados
<MDIconButton>:
    icon_size: '45sp'
    theme_icon_color: "Custom"
    icon_color: mainbtcolor

# Pantalla de confirmación
<ConfirmationScreen>:
    size_hint: (.3, .3)
    auto_dismiss: False
    BoxLayout:
        spacing: '10dp'
        padding: '10dp'
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: mainbtcolor
            RoundedRectangle:
                size: self.size
                pos: self.pos
        # Título
        BoxLayout:
            size_hint: (1, .2)
            WrappedLabel:
                text: '¿Desea reiniciar la partida?'
        # Selección de opción
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            spacing: '10dp'
            padding: '10dp'

            BoxLayout:
                orientation: 'horizontal'
                size_hint: (None, None)
                size: (self.minimum_width, self.minimum_height)

                MDIconButton:
                    icon: 'check-circle-outline'
                    icon_color: app.theme_cls.primary_color
                    on_release:
                        app.root.ids.jugarid.reset_parametros()
                        app.root.ids.jugarid.on_enter()
                        root.dismiss()

                MDIconButton:
                    icon: 'close-circle-outline'
                    icon_color: app.theme_cls.primary_color
                    on_release:
                        root.dismiss()

<Popup_resultado>:
    title_color: (0, 0, 0, 1)
    title: 'RESULTADOS'
    size_hint: (.8, .65)
    background: '' # white

